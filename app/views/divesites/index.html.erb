

<h1>Divesites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @divesites.each do |divesite| %>
      <tr>
        <td><%= divesite.name %></td>
        <td><%= link_to 'Show', divesite %></td>
        <td><%= link_to 'Edit', edit_divesite_path(divesite) %></td>
        <td><%= link_to 'Destroy', divesite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <%= link_to 'Twitter', "https://twitter.com/share?url=#{request.url}c=ポイント名:#{divesite.name}\n海況:#{divesite.discription}", title: 'Twitter', target: '_blank' %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Divesite', new_divesite_path %>
